@model ExoGuardian.Models.registerViewModel
@{
    ViewData["Title"] = "Register";
}


<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["Registrarse"]" method="post" class="form-horizontal">
    <h2>Crear cuenta</h2>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="email" type="email" class="col-md-2 control-label">Correo Electronico</label>
        <div class="col-md-5">
            <input asp-for="email" class="form-control" />
            <!--<span asp-validation-for="email" class="text-danger">Correo Electronico es obligatorio</span>-->
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-md-2 control-label">Contraseña</label>
        <div class="col-md-5">
            <input asp-for="Password" class="form-control" />
            <!-- <span asp-validation-for="Password" class="text-danger">La contraseña es requerida</span> -->
        </div>
    </div>
    <div class="form-group">
        <label asp-for="confirmPassword" class="col-md-2 control-label">Confirme contraseña</label>
        <div class="col-md-5">
            <input asp-for="confirmPassword" class="form-control" />
            <!-- <span asp-validation-for="confirmPassword" class="text-danger">Las contraseñas no coinciden</span> -->
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <button id="btnGuardar" name="btnGuardar" type="submit" class="btn btn-default" >Guardar</button>
        </div>
    </div>

</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
